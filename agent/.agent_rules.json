{
  "version": "0.1",
  "project_configurations": [
    {
      "project_type": "zephyr",
      "language": "C/C++",
      "build_system": "cmake",
      "test_coverage": "80",
      "testframework": {
        "test_runner": {
          "name": "ztester",
          "info": "test need to be provided as param to the command and path is from zephyr_main_app root (e.g. ztests/test_sample)",
          "command": "python run_tests.py --run_test",
          "execute_path": "zephyr_main_app/ztests/",
          "build_path": "zephyr_main_app/ztests/build/"
        },
        "test_builder": {
          "name": "zbuilder",
          "gcc_builder": false,
          "info": "test need to be provided as param to the command and path is from zephyr_main_app root (e.g. ztests/test_sample)",
          "command": "python run_tests.py --build",
          "execute_path": "zephyr_main_app/ztests/",
          "build_path": "zephyr_main_app/ztests/build/",
          "compiler_flags": []
        }
      },
      "file_rules": {
        "allowed_to_modify": [
          "zephyr_main_app/ztests/",
          "zephyr_main_app/unit_tests/",
          "zephyr_main_app/unit_tests/mock_files"
        ],
        "ignored_files": [
          "*.md",
          "*.txt",
          "*.json"
        ]
      },
      "cpp_code_rules": {
        "not_allowed_header_includes": [
          "zephyr.h",
          "register_c_lite/wrappers/"
        ],
        "not_allowed_include_extensions": [
          ".cpp",
          ".cxx",
          ".cc"
        ]
      },
      "cmake_rules": {
        "cmake_overall_guidelines": {
          "allow_absolute_paths": false,
          "allow_FILE_function": false
        },
        "not_allowed_cmake_include_dirs": [
          "tests/unit_tests",
          "${ZEPHYR_BASE}/include/",
          "register_c_lite/wrappers/"
        ],
        "not_allowed_cmake_linked_libraries": [
          "nokia_soclogger",
          "DPDRegWrapLib",
          "Sdc002RegbankRegs",
          "parest_dyn_clk_driver",
          "sdc_service"
        ],
        "not_allowed_cmake_subdirectories": [
          "../../../"
        ]
      }
    },
    {
      "project_type": "dti_tools",
      "language": "C/C++",
      "build_system": "cmake",
      "test_coverage": "0",
      "testframework": {
        "test_runner": {
          "name": "test_runner",
          "info": "Runs dti_tools unit tests",
          "command": "build_and_run_tests.py --run_tests",
          "execute_path": "tools/dti_tools/",
          "build_path": "tools/dti_tools/build/"
        },
        "test_builder": {
          "name": "test_builder",
          "info": "Builds dti_tools unit tests",
          "gcc_builder": true,
          "command": "build_and_run_tests.py --build",
          "compiler_flags": ["-DUNIT_TESTS=ON"],
          "execute_path": "tools/dti_tools/",
          "build_path": "tools/dti_tools/build/"
        }
      },
      "file_rules": {
        "allowed_to_modify": ["zephyr_main_app/ztests/", "tools/dti_tools"],
        "ignored_files": ["*.json", "*.md", "*.txt", "*.py"]
      },
      "cpp_code_rules": {
        "not_allowed_header_includes": [],
        "not_allowed_include_extensions": []
      },
      "cmake_rules": {
        "cmake_overall_guidelines": {
          "allow_absolute_paths": false,
          "allow_FILE_function": false
        },
        "not_allowed_cmake_include_dirs": [],
        "not_allowed_cmake_linked_libraries": [],
        "not_allowed_cmake_subdirectories": []
      }
    }
  ]
}